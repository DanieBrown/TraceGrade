# ===========================
# TraceGrade Environment Configuration
# ===========================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# ===========================
# Database Configuration (PostgreSQL)
# ===========================
POSTGRES_DB=tracegrade
POSTGRES_USER=tracegrade
POSTGRES_PASSWORD=tracegrade_dev_password
POSTGRES_PORT=5432

# ===========================
# Cache Configuration (Redis)
# ===========================
REDIS_PASSWORD=tracegrade_redis_password
REDIS_PORT=6379

# ===========================
# Backend Configuration
# ===========================
BACKEND_PORT=8080

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# JWT Configuration — REQUIRED: generate a random string of at least 64 characters
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING
JWT_EXPIRATION=86400000

# Database Settings
SHOW_SQL=false

# ===========================
# Frontend Configuration
# ===========================
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8080/api

# ===========================
# Development Tools (Optional)
# ===========================
# pgAdmin Configuration — REQUIRED: change the default password
PGADMIN_EMAIL=admin@tracegrade.local
PGADMIN_PASSWORD=CHANGE_ME_SET_SECURE_PASSWORD
PGADMIN_PORT=5050

# ===========================
# Production Settings
# ===========================
# These should be overridden in production environments
# NODE_ENV=production
# SPRING_PROFILES_ACTIVE=production
